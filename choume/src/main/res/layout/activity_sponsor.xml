<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:fitsSystemWindows="true"
    android:background="?attr/colorPrimary"
    android:layout_height="match_parent">
    <include
        layout="@layout/app_bar_layout">
    </include>

    <LinearLayout
        android:orientation="vertical"
        android:background="@color/cmwhite"
        android:layout_height="match_parent"
        android:layout_width="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:background="@color/cmblue_11a2ff"
        android:gravity="center"
        android:layout_height="100dp"
        android:layout_width="match_parent">
       <LinearLayout
           android:padding="10dp"
           android:orientation="horizontal"
           android:layout_height="50dp"
           android:gravity="center"
           android:layout_width="match_parent">

           <ImageView
               android:adjustViewBounds="true"
               android:scaleType="fitXY"
               android:src="@drawable/selector_choose"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:id="@+id/imageView1" />
           <View
               android:layout_weight="1"
               android:background="@color/cmwhite"
               android:layout_height="2dp"
               android:layout_width="0dp"/>
           <ImageView
               android:adjustViewBounds="true"
               android:scaleType="fitXY"
               android:src="@drawable/selector_choose"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:id="@+id/imageView2" />
           <View
               android:layout_weight="1"
               android:background="@color/cmwhite"
               android:layout_height="2dp"
               android:layout_width="0dp"/>
           <ImageView
               android:adjustViewBounds="true"
               android:scaleType="fitXY"
               android:src="@drawable/selector_choose"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:id="@+id/imageView3" />
           <View
               android:layout_weight="1"
               android:background="@color/cmwhite"
               android:layout_height="2dp"
               android:layout_width="0dp"/>
           <ImageView
               android:adjustViewBounds="true"
               android:scaleType="fitXY"
               android:src="@drawable/selector_choose"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:id="@+id/imageView7" />
       </LinearLayout>
        <LinearLayout
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_height="50dp"
            android:layout_width="match_parent">

            <TextView
                android:textColor="@color/cmwhite"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="选择类别"
                android:id="@+id/textView18" />
            <TextView
                android:textColor="@color/cmwhite"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="项目信息"
                android:id="@+id/textView21" />
            <TextView
                android:textColor="@color/cmwhite"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="回报方式"
                android:id="@+id/textView123" />
            <TextView
                android:textColor="@color/cmwhite"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="审核发布"
                android:id="@+id/textView32" />
        </LinearLayout>
        </LinearLayout>

        <include
            android:id="@+id/layout_choose_type"
            layout="@layout/layout_choose_type"/>
        <include
            android:id="@+id/layout_program_detail"
            layout="@layout/layout_program_detail">
        </include>

        <include
            android:id="@+id/layout_reward_way"
            layout="@layout/layout_reward_way"/>
        <include
            android:id="@+id/layout_publish"
            layout="@layout/layout_publish"/>

        <Button
            android:textColor="@color/cmwhite"
            android:layout_gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:layout_margin="10dp"
            android:text="下一步"
            android:id="@+id/bt_next" />

    </LinearLayout>



</LinearLayout>