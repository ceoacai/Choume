<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                tools:context="com.shichai.www.choume.activity.mine.RegisterActivity">

    <Button
            android:id="@+id/btnCancelRegister"
            android:text="取消"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <LinearLayout
            android:id="@+id/llFormArea"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerInParent="true"
            >

        <EditText
                android:id="@+id/etNick"
                android:hint="昵称"
                android:layout_width="match_parent"
                android:layout_height="50dp"/>

        <EditText
                android:id="@+id/etTel"
                android:hint="电话号码"
                android:layout_width="match_parent"
                android:layout_height="50dp"/>

        <EditText
                android:hint="密码"
                android:id="@+id/etPassword"
                android:inputType="textPassword"
                android:layout_width="match_parent"
                android:layout_height="50dp"/>


        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp">

            <EditText
                    android:hint="验证码"
                    android:id="@+id/etSmsCode"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_width="120dp"
                    android:layout_height="match_parent"/>

            <Button
                    android:id="@+id/btnRequestSmsCode"
                    android:text="发送验证码"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"/>

        </RelativeLayout>

    </LinearLayout>

    <Button
            android:id="@+id/btnToRegister"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/llFormArea"
            android:layout_marginTop="10dp"
            android:background="@color/blue"
            android:text="注册"
            android:textColor="@color/white"
            android:layout_width="300dp"
            android:layout_height="35dp"/>

</RelativeLayout>
