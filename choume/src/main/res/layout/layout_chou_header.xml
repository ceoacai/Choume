<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <RelativeLayout
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        >

        <TextView
            android:textSize="20sp"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="项目的名字"
            android:id="@+id/tvProjectName"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="项目的小名字     更多>>"
            android:id="@+id/tvProjectDesc"
            android:layout_below="@+id/tvProjectName"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <com.shichai.www.choume.view.CircleImageView
            android:src="@mipmap/test_head"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/ivProjectCfuserAvatar"
            android:layout_alignTop="@+id/tvProjectName"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <ProgressBar
            android:layout_marginTop="10dp"
            style="@style/ProgressBar_Mini"
            android:progress="67"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/progressBar"
            android:layout_below="@+id/tvProjectDesc"
            android:layout_alignLeft="@+id/tvProjectDesc"
            android:layout_alignStart="@+id/tvProjectDesc" />

        <LinearLayout
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_below="@+id/progressBar"
            android:layout_centerHorizontal="true">
            <LinearLayout
                android:gravity="center"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_height="match_parent"
                android:layout_width="0dp">

                <TextView
                    android:drawablePadding="10dp"
                    android:drawableTop="@mipmap/ico_progress"
                    android:textSize="14sp"
                    android:textColor="@color/border_color"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="众筹进度"
                    />

                <TextView
                    android:id="@+id/tvProgressPercent"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="45%"
                    android:layout_gravity="center_horizontal" />
            </LinearLayout>
            <LinearLayout
                android:gravity="center"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_height="match_parent"
                android:layout_width="0dp">

                <TextView
                    android:drawablePadding="10dp"
                    android:drawableTop="@mipmap/ico_jine"
                    android:textSize="14sp"
                    android:textColor="@color/border_color"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="已筹金额(元)"
                    />

                <TextView
                    android:id="@+id/tvAlreadyMoneyAmount"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5000"
                    android:layout_gravity="center_horizontal" />
            </LinearLayout>
            <LinearLayout
                android:gravity="center"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_height="match_parent"
                android:layout_width="0dp">

                <TextView
                    android:drawablePadding="10dp"
                    android:drawableTop="@mipmap/ico_progress"
                    android:textSize="14sp"
                    android:textColor="@color/border_color"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="一抽物品"
                    />

                <TextView
                    android:id="@+id/tvAlreadyGoodsAmount"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="45%"
                    android:layout_gravity="center_horizontal" />
            </LinearLayout>
            <LinearLayout
                android:gravity="center"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_height="match_parent"
                android:layout_width="0dp">

                <TextView
                    android:drawablePadding="10dp"
                    android:drawableTop="@mipmap/ico_time"
                    android:textSize="14sp"
                    android:textColor="@color/border_color"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="剩余时间"
                    />

                <TextView
                    android:id="@+id/tvRemainDays"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10天"
                    android:layout_gravity="center_horizontal" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
    <LinearLayout
        android:layout_margin="10dp"
        android:orientation="horizontal"
        android:layout_height="wrap_content"
        android:layout_width="match_parent">
        <TextView
            android:id="@+id/tv_reply"
            android:text="回复"
            android:textColor="@drawable/selector_chou_tab_text_color"
            android:onClick="onClick"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tv_comment"
            android:onClick="onClick"
            android:textColor="@drawable/selector_chou_tab_text_color"
            android:gravity="center"
            android:text="评论"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tv_supporter"
            android:gravity="center"
            android:textColor="@drawable/selector_chou_tab_text_color"
            android:text="支持者"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"/>
    </LinearLayout>

</LinearLayout>