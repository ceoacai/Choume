<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:fitsSystemWindows="true"
    android:background="?attr/colorPrimary"
    android:layout_height="match_parent">

    <include
        layout="@layout/app_bar_layout">
    </include>
    <LinearLayout
        android:background="@color/default_bg"
        android:orientation="vertical"
        android:layout_height="match_parent"
        android:layout_width="match_parent">
        <LinearLayout
            android:background="@color/white"
            android:orientation="vertical"
            android:layout_height="wrap_content"
            android:layout_width="match_parent">
        <View
            android:layout_height="1px"
            android:background="@color/cmgray"
            android:layout_width="match_parent"/>
        <RelativeLayout
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="100dp">

            <TextView
                style="@style/setting_attr_text"
                android:text="头像"
                android:id="@+id/textView11"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <FrameLayout
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                >

                <com.shichai.www.choume.view.CircleImageView
                    android:id="@+id/ivAvatar"
                    android:scaleType="centerCrop"
                    android:layout_gravity="center"
                    android:src="@mipmap/user_default"
                    android:layout_width="50dp"
                    android:layout_height="50dp"/>

                <ProgressBar
                    android:visibility="gone"
                    android:id="@+id/pbLoadingAvatar"
                    android:layout_width="30dp"
                    android:layout_height="30dp"/>
            </FrameLayout>
        </RelativeLayout>
        <View
            android:layout_height="1px"
            android:background="@color/cmgray"
            android:layout_width="match_parent"/>
        <RelativeLayout
            android:id="@+id/rlToChangeNick"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <TextView
                style="@style/setting_attr_text"
                android:text="昵称"
                android:id="@+id/textView12"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <TextView
                style="@style/setting_text"
                android:text="小明"
                android:id="@+id/tvNick"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />
        </RelativeLayout>
        <View
            android:layout_height="1px"
            android:background="@color/cmgray"
            android:layout_width="match_parent"/>
        <RelativeLayout
            android:id="@+id/rlToChangeSex"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <TextView
                style="@style/setting_attr_text"
                android:text="性别"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <TextView
                style="@style/setting_text"
                android:text="男"
                android:id="@+id/tvSex"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />
        </RelativeLayout>
        <View
                android:layout_height="1px"
                android:background="@color/cmgray"
                android:layout_width="match_parent"/>

        <RelativeLayout
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <TextView
                style="@style/setting_attr_text"
                android:text="手机"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <TextView
                style="@style/setting_text"
                android:text="13786958745"
                android:id="@+id/tvTel"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />
        </RelativeLayout>
        <View
            android:layout_height="1px"
            android:background="@color/cmgray"
            android:layout_width="match_parent"/>

        <RelativeLayout android:id="@+id/rlToCert"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <TextView
                style="@style/setting_attr_text"
                android:text="认证"
                android:id="@+id/textView20"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <TextView
                style="@style/setting_text"
                android:text="学生"
                android:id="@+id/tvCertType"
                android:layout_alignTop="@+id/textView20"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />
        </RelativeLayout>
        <View
            android:layout_height="1px"
            android:background="@color/cmgray"
            android:layout_width="match_parent"/>
        <RelativeLayout
            android:id="@+id/rlToManageAddress"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <TextView
                style="@style/setting_attr_text"
                android:text="收货地址"
                android:id="@+id/textView22"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <TextView
                style="@style/setting_text"
                android:text="北京市大城区112号"
                android:id="@+id/tvAddr"
                android:layout_alignTop="@+id/textView22"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />
        </RelativeLayout>
        <View
            android:layout_height="1px"
            android:background="@color/cmgray"
            android:layout_width="match_parent"/>
        <RelativeLayout
            android:id="@+id/rlToChangePwd"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <TextView
                style="@style/setting_attr_text"
                android:text="修改密码"
                android:id="@+id/textView25"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <TextView
                style="@style/setting_text"
                android:text=""
                android:layout_alignTop="@+id/textView25"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />
        </RelativeLayout>
        <View
            android:layout_height="1px"
            android:background="@color/cmgray"
            android:layout_width="match_parent"/>
</LinearLayout>

    </LinearLayout>

</LinearLayout>